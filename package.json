{
  "name": "@skillmarkdown/cli",
  "version": "0.1.1",
  "description": "CLI for scaffolding SKILL.md-based AI skills",
  "license": "MIT",
  "type": "commonjs",
  "bin": {
    "skillmd": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/cli.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "ci:check": "npm run format:check && npm run lint && npm test",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.js\" \"docs/**/*.md\" \"README.md\" \"AGENTS.md\" \".github/workflows/*.yml\" \"*.{json,mjs}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.js\" \"docs/**/*.md\" \"README.md\" \"AGENTS.md\" \".github/workflows/*.yml\" \"*.{json,mjs}\"",
    "prepare": "husky",
    "prepublishOnly": "npm run clean && npm run build",
    "smoke:link": "bash ./scripts/smoke-link.sh",
    "smoke:pack": "bash ./scripts/smoke-pack.sh",
    "test": "npm run build && node --test"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skillmarkdown/cli.git"
  },
  "bugs": {
    "url": "https://github.com/skillmarkdown/cli/issues"
  },
  "homepage": "https://github.com/skillmarkdown/cli#readme",
  "keywords": [
    "skillmarkdown",
    "skillmd",
    "cli"
  ],
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,mjs,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}
